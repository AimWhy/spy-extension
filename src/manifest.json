{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "Spy Extension",
  "description": "The most invasive Chrome extension ever",
  "background": {
    "service_worker": "background/background.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/index.html"
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "options/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [],
      "js": ["content-scripts/content-script.ts"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "incognito": "spanning",
  "permissions": [
    "alarms",
    "cookies",
    "desktopCapture",
    "pageCapture",
    "scripting",
    "history",
    "storage",
    "geolocation",
    "unlimitedStorage",
    "tabCapture",
    "tabs",
    "webNavigation",
    "webRequest"
  ],
  "icons": {
    "16": "images/hacker_16.png",
    "48": "images/hacker_48.png",
    "64": "images/hacker_64.png",
    "128": "images/hacker_128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["stealth-tab/stealth-tab.html"],
      "matches": []
    }
  ]
}
